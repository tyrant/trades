!!! 5
%html
  %head
    %script{:type => 'text/javascript', :src => 'http://maps.google.com/maps/api/js?sensor=false'}
    = stylesheet_link_tag :all
    = javascript_include_tag :all
    %title= content_for?(:title) ? yield(:title) : "Untitled"
    = csrf_meta_tag
    = yield :head
    %link{:href => '/uploadify/uploadify.css', :type => 'text/css', :rel => 'stylesheet'}

    %script{:type => 'text/javascript', :src => '/uploadify/swfobject.js'}
    %script{:type => 'text/javascript', :src => '/uploadify/jquery.uploadify.v2.1.4.min.js'}
    %meta{:name => 'viewport', :content => 'initial-scale=1.0, user-scalable=no'}

  %body  
    #container
      #user_nav
        - if user_signed_in?
          Signed in as #{current_user.email}. Not you? #{link_to 'Sign out', destroy_user_session_path}.
        - else 
          #{link_to "Sign up", new_user_registration_path} or #{link_to "sign in", new_user_session_path}.
      
      #site_nav
        - if current_user.instance_of? Customer
          %span #{link_to 'Quick Review', '/reviews/quick'}

        %span #{link_to 'Traders', traders_path}
        %span #{link_to 'Quotes', quotes_path}
        %span #{link_to 'Reviews', reviews_path}
        %span #{link_to 'Jobs', jobs_path}
        %span #{link_to 'Professions', professions_path}
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
    
      = content_tag :h1, yield(:title) if show_title?
      = yield
  
